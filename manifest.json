{
  "name": "ChatGPT Lightspeed Keyboard",
  "version": "0.1.0",
  "description": "Keyboard shortcuts to make ChatGPT quicker",
  "permissions": ["activeTab", "commands", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/small-ext-icon.png", "assets/ext-icon.png"],
      "matches": ["https://*.openai.com/*"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/small-ext-icon.png",
      "24": "assets/small-ext-icon.png",
      "32": "assets/small-ext-icon.png",
      "48": "assets/ext-icon.png",
      "128": "assets/ext-icon.png"
    },
    "default_title": "ChatGPT Lightspeed",
    "default_popup": "popup.html"
  },
  "commands": {
    "interrupt": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Interrupt the current query"
    }, 
    "switch3": {
      "suggested_key": {
        "default": "Alt+3"
      },
      "description": "Switch to GPT-3.5"
    }, 
    "switch4": {
      "suggested_key": {
        "default": "Alt+4"
      },
      "description": "Switch to GPT-4"
    }, 
    "switchPlugins": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Switch to GPT + Plugins"
    }
  },  
  "manifest_version": 3
}
